{
    "manifest_version": 3,
    "name": "Live Audio to Text Transcriber",
    "version": "0.0.1",
    "description": "A live audio to text transcriber",
    "icons": {
        "16": "public/icon-16.png",
        "48": "public/icon-48.png",
        "128": "public/icon-128.png"
    },
    "action": {
        "default_title": "Open Side Panel"
    },
    "permissions": [
        "activeTab",
        "storage",
        "sidePanel",
        "tabCapture",
        "audioCapture",
        "microphone"
    ],
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["src/content.ts"]
        }
    ],
    "background": {
        "service_worker": "src/service-worker.ts"
    },
    "host_permissions": [
        "<all_urls>"
    ]
}
